<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<context:component-scan base-package="com.htmlhifive.sync.resource.update" />
	<context:component-scan base-package="com.htmlhifive.sync.resource.test" />

	<bean id="target" class="com.htmlhifive.sync.resource.DefaultSyncResourceManager">
		<property name="syncResourceBaseTypeName"
			value="com.htmlhifive.sync.resource.test.TestAbstractSyncResource" />
		<property name="resourceConfigurations">
			<props>
				<prop key="testKey">testVal</prop>
			</props>
		</property>
	</bean>

</beans>
